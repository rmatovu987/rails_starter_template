<% content_for :title, "#{@settings_invitation.firstname} #{@settings_invitation.lastname}" %>

<%= render 'shared/breadcrumbs' %>
<div id="<%= dom_id @settings_invitation %>">
  <!-- Main content -->
  <div class="h-[calc(100lvh_-_10.5rem)] flex flex-wrap ">
    <div class="w-full md:w-2/3 md:overflow-scroll max-h-max md:max-h-full">
      <div class="white_card_no_margin lg:me-5">
        <div class="flex flex-wrap">
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">ID:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_invitation.unique_id %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Encoded key:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_invitation.encoded_key %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">First name:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_invitation.firstname %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Last name:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_invitation.lastname %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Email address:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_invitation.email_address %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Time Zone:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_invitation.time_zone %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Invited by:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= link_to("#{@settings_invitation.inviter.firstname} #{@settings_invitation.inviter.lastname}", user_path(@settings_invitation.inviter.id))%>
            </div>
          </div>
        </div>
        <div class="w-full space-x-3 flex justify-end mt-6">
          <%= link_to "Destroy", @settings_invitation,
                      class: "btn btn-error",
                      data: { turbo_confirm: "Are you sure you want to delete this invitation?",
                              turbo_method: :delete} %>

          <%= link_to "Edit", edit_settings_invitation_path(@settings_invitation),
                      class: "btn btn-primary", data: { turbo_frame: "modal" } %>
          <% if @settings_invitation.pending? %>
            <%= link_to "Resend invite", resend_invitation_settings_invitation_path(@settings_invitation),
                        class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="w-full md:w-1/3 white_card_no_margin md:overflow-scroll max-h-max md:max-h-full mt-5 md:mt-0">
      <div class="font-bold text-2xl mb-4">Timeline</div>
      <%= render partial: 'shared/timeline', locals: { versions: @versions } %>
    </div>

  </div>
  <!-- End of main content -->
</div>

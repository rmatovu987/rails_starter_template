<%= form_with(model: settings_invitation, class: "contents",
              data: { controller: "form", action: "submit->form#submit", form_target: "form" }
    ) do |form| %>
  <% if settings_invitation.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(settings_invitation.errors.count, "error") %> prohibited this invitation from being saved:</h2>

      <ul class="list-disc ml-6">
        <% settings_invitation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :firstname %>
    <%= form.text_field :firstname, autofocus: true, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": settings_invitation.errors[:firstname].none?, "border-red-400 focus:outline-red-600": settings_invitation.errors[:firstname].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": settings_invitation.errors[:lastname].none?, "border-red-400 focus:outline-red-600": settings_invitation.errors[:lastname].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email_address %>
    <%= form.text_field :email_address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": settings_invitation.errors[:email_address].none?, "border-red-400 focus:outline-red-600": settings_invitation.errors[:email_address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :time_zone %>
    <%= form.time_zone_select :time_zone, nil, { include_blank: 'Please select a timezone' }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": settings_invitation.errors[:time_zone].none?, "border-red-400 focus:outline-red-600": settings_invitation.errors[:time_zone].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :assigned_branch_id %>
    <%= render partial: 'shared/select',
               locals: {
                 placeholder: "Select the assigned branch",
                 form: form,
                 name: :assigned_branch_id,
                 selected_option: settings_invitation.assigned_branch_id,
                 set_auto_focus: false,
                 icon: nil,
                 options: Settings::Branch.order(name: :asc).map { |org| { id: org.id, name: org.name } }
               } %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full btn btn-primary" %>
  </div>
<% end %>

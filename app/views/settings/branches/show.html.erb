<% content_for :title, @settings_branch.name %>

<%= render 'shared/breadcrumbs' %>
<div id="<%= dom_id @settings_branch %>">
  <!-- Main content -->
  <div class="h-[calc(100lvh_-_10.5rem)] flex flex-wrap ">
    <div class="w-full md:w-2/3 md:overflow-scroll max-h-max md:max-h-full">
      <div class="white_card_no_margin lg:me-5">
        <div class="flex flex-wrap">
          <div class="w-full mb-2"><span class="card-title">Branch details</span></div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">ID:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_branch.unique_id %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Encoded key:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_branch.encoded_key %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Name:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_branch.name %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Is Main:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_branch.isMain ? 'Yes' : 'No' %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Status:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <% if @settings_branch.status == 'Pending' %>
                <%= render partial: "shared/badge", locals: { status: Statuses::SECONDARY, label: @settings_branch.status } %>
              <% elsif @settings_branch.status == 'Active' %>
                <%= render partial: "shared/badge", locals: { status: Statuses::SUCCESS, label: @settings_branch.status } %>
              <% elsif @settings_branch.status == 'Closed' %>
                <%= render partial: "shared/badge", locals: { status: Statuses::ERROR, label: @settings_branch.status } %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="w-full space-x-3 flex justify-end mt-6">
          <%= link_to "Destroy", @settings_branch,
                      class: "btn btn-error",
                      data: { turbo_confirm: "Are you sure you want to delete this branch?",
                              turbo_method: :delete} %>

          <%= link_to "Edit", edit_settings_branch_path(@settings_branch),
                      class: "btn btn-success", data: { turbo_frame: "modal" } %>
          <% if @settings_branch.pending? || @settings_branch.closed? %>
            <%= link_to "Activate", activate_settings_branch_path(@settings_branch),
                        class: "btn btn-success", data: { turbo_method: :put } %>
          <% elsif @settings_branch.active? %>
            <%= link_to "Close", close_settings_branch_path(@settings_branch),
                        class: "btn btn-error", data: { turbo_method: :put } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="w-full md:w-1/3 mt-5 md:mt-0 white_card_no_margin md:overflow-scroll max-h-full">
      <div class="font-bold text-2xl mb-4">Timeline</div>
      <%= render partial: 'shared/timeline', locals: { versions: @versions } %>
    </div>

  </div>
  <!-- End of main content -->
</div>

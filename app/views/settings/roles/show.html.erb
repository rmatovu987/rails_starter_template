<% content_for :title, @settings_role.name %>

<%= render 'shared/breadcrumbs' %>
<div id="<%= dom_id @settings_role %>">
  <!-- Main content -->
  <div class="h-[calc(100lvh_-_10.5rem)] flex flex-wrap ">
    <div class="w-full md:w-2/3 md:overflow-scroll max-h-max md:max-h-full">
      <div class="white_card_no_margin lg:me-5">
        <div class="flex flex-wrap">
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">ID:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_role.unique_id %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Encoded key:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_role.encoded_key %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Name:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_role.name %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Description:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_role.description %>
            </div>
          </div>
        </div>
        <div class="w-full space-x-3 flex justify-end mt-6">
          <%= link_to "Destroy", @settings_role,
                      class: "btn btn-error",
                      data: { turbo_confirm: "Are you sure you want to delete this role?",
                              turbo_method: :delete} %>

          <%= link_to "Edit", edit_settings_role_path(@settings_role),
                      class: "btn btn-primary", data: { turbo_frame: "modal" } %>
        </div>
      </div>
      <div class="white_card lg:me-5">
        <div class="card-title">Permissions</div>
        <div id="settings_system_permission_nodes">
          <% if @settings_system_permission_nodes.any? %>
            <table class="table" style="border-collapse: separate; border-spacing: 0.5rem;">
              <tbody>
              <% @settings_system_permission_nodes.each do |root| %>
                <%= render partial: 'settings/roles/role_permission',
                           locals: { permission_node: root,
                                     depth: 0.5,
                                     role: @settings_role } %>
              <% end %>
              </tbody>
            </table>

          <% else %>
            <p class="text-center my-10">No permission nodes found.</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="w-full md:w-1/3 white_card_no_margin md:overflow-scroll max-h-max md:max-h-full mt-5 md:mt-0">
      <div class="font-bold text-2xl mb-4">Timeline</div>
      <%= render partial: 'shared/timeline', locals: { versions: @versions } %>
    </div>

  </div>
  <!-- End of main content -->
</div>

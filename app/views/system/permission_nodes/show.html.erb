<% content_for :title, "Showing permission node" %>

<%= render 'shared/breadcrumbs' %>
<div id="<%= dom_id @settings_system_permission_node %>">
  <!-- Main content -->
  <div class="h-[calc(100lvh_-_10.5rem)] flex flex-wrap ">
    <div class="w-full md:w-2/3 md:overflow-scroll max-h-max md:max-h-full">
      <div class="white_card_no_margin lg:me-5">
        <div class="flex flex-wrap">
          <div class="w-full mb-2"><span class="card-title">Permission node details</span></div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">ID:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_system_permission_node.unique_id %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Encoded key:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_system_permission_node.encoded_key %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Name:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_system_permission_node.name %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Path:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_system_permission_node.path %>
            </div>
          </div>
          <div class="w-full flex space-y-4">
            <div class="w-2/6 md:w-1/6 space-y-4">
              <strong class=" description">Parent:</strong>
            </div>
            <div class="leading-relaxed font-normal">
              <%= @settings_system_permission_node.parent ? @settings_system_permission_node.parent.name : '-'  %>
            </div>
          </div>
        </div>
        <div class="w-full space-x-3 flex justify-end mt-6">
          <%= link_to "Destroy", @settings_system_permission_node,
                      class: "btn btn-error",
                      data: { turbo_confirm: "Are you sure you want to delete this permission node?",
                              turbo_method: :delete} %>

          <%= link_to "Edit", edit_settings_system_permission_node_path(@settings_system_permission_node),
                      class: "btn btn-primary", data: { turbo_frame: "modal" } %>
        </div>
      </div>
    </div>
    <div class="w-full md:w-1/3 mt-5 md:mt-0 white_card_no_margin md:overflow-scroll max-h-full">
      <div class="font-bold text-2xl mb-4">Timeline</div>
      <%= render partial: 'shared/timeline', locals: { versions: @versions } %>
    </div>

  </div>
  <!-- End of main content -->
</div>
<%= form_with(model: @user,
              url: attach_branch_user_path(@user),
              method: :post, class: "contents",
              data: { controller: "form", action: "submit->form#submit", form_target: "form" }
    ) do |form| %>
  <div class="my-5">
    <%= form.label :branch_id %>
    <%= render partial: 'shared/select',
               locals: {
                 placeholder: "Select a branch",
                 form: form,
                 name: :branch_id,
                 selected_option: nil,
                 icon: nil,
                 options: Settings::Organization::Branch.all.order(name: :asc)
               } %>
  </div>

  <div class="inline">
    <%= form.submit "Attach Branch", class: "btn btn-primary w-full" %>
  </div>
<% end %>